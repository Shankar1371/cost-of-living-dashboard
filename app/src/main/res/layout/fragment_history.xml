<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <!-- Custom App Bar Layout -->
    <LinearLayout
        android:id="@+id/customAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/gradient_primary"
        android:elevation="8dp">

        <!-- Header Section -->
        <LinearLayout
            android:id="@+id/headerSection"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:background="@color/material_dynamic_neutral_variant30"
            android:orientation="vertical"
            android:padding="24dp">

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/ic_history"
                app:tint="@color/white"
                android:contentDescription="History icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="Expense History"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                android:letterSpacing="0.02" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Track your spending patterns"
                android:textColor="@color/white_80"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_regular" />

        </LinearLayout>

        <!-- Search and Filter Bar -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="0dp"
            app:cardCornerRadius="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <!-- Search Bar Container -->
                <LinearLayout
                    android:id="@+id/searchInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/search_input_background"
                    android:padding="12dp"
                    android:layout_marginEnd="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_search"
                        app:tint="@color/text_secondary"
                        android:layout_marginEnd="8dp"/>

                    <EditText
                        android:id="@+id/searchEditText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:hint="Search expenses..."
                        android:textColorHint="@color/text_secondary"
                        android:background="@null"
                        android:fontFamily="@font/roboto_regular"/>
                </LinearLayout>

                <!-- Filter Button -->
                <Button
                    android:id="@+id/filterButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/filter_button_background"
                    android:drawableStart="@drawable/ic_filter"
                    android:drawableTint="@color/primary"
                    android:contentDescription="Filter expenses"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="280dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Summary Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:weightSum="2">

                <!-- Total Spent Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="88dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardBackgroundColor="@color/success_light"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_trending_up"
                            app:tint="@color/success_dark"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Spent"
                            android:textColor="@color/success_dark"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/roboto_medium"/>

                        <TextView
                            android:id="@+id/totalSpentText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$0.00"
                            android:textColor="@color/success_dark"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginTop="2dp"
                            android:fontFamily="@font/roboto_bold"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- This Month Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="88dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardBackgroundColor="@color/warning_light"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_calendar"
                            app:tint="@color/warning_dark"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="This Month"
                            android:textColor="@color/warning_dark"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/roboto_medium"/>

                        <TextView
                            android:id="@+id/thisMonthText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$0.00"
                            android:textColor="@color/warning_dark"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginTop="2dp"
                            android:fontFamily="@font/roboto_bold"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- RecyclerView Container -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="24dp"
                app:cardElevation="12dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Section Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="24dp"
                        android:paddingBottom="16dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_list"
                            android:layout_marginEnd="12dp"
                            app:tint="@color/primary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Recent Transactions"
                            android:textColor="@color/text_primary"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/roboto_bold"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="@drawable/count_badge_background"
                            android:padding="8dp">

                            <TextView
                                android:id="@+id/expenseCountText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 items"
                                android:textColor="@color/primary"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/roboto_medium"/>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Enhanced Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/gradient_divider"
                        android:layout_marginHorizontal="24dp"/>

                    <!-- RecyclerView -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewHistory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:clipToPadding="false"
                        android:scrollbars="vertical"
                        android:scrollbarStyle="outsideOverlay"
                        android:overScrollMode="never"
                        tools:listitem="@layout/item_expense"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Enhanced Empty State -->
            <LinearLayout
                android:id="@+id/emptyStateLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="48dp"
                android:visibility="gone">

                <!-- Animated Empty State Container -->
                <androidx.cardview.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    app:cardCornerRadius="70dp"
                    app:cardBackgroundColor="@color/surface_light"
                    app:cardElevation="8dp"
                    android:layout_marginBottom="24dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_empty_wallet"
                        android:alpha="0.7"
                        android:layout_gravity="center"
                        app:tint="@color/text_secondary" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No expenses yet"
                    android:textColor="@color/text_primary"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/roboto_bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start tracking your expenses by adding your first transaction"
                    android:textColor="@color/text_secondary"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:layout_marginBottom="32dp"
                    android:fontFamily="@font/roboto_regular"
                    android:lineSpacingExtra="4dp"/>

                <Button
                    android:id="@+id/addFirstExpenseButton"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:text="Add First Expense"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/primary_button_background"
                    android:drawableStart="@drawable/ic_add"
                    android:drawableTint="@color/white"
                    android:drawablePadding="8dp"
                    android:paddingHorizontal="24dp"
                    android:fontFamily="@font/roboto_bold"/>

            </LinearLayout>

            <!-- Bottom Spacer -->
            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Custom Floating Action Button -->
    <androidx.cardview.widget.CardView
        android:id="@+id/fabContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        app:cardCornerRadius="32dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@color/primary"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:id="@+id/fabAddExpense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:paddingStart="20dp"
            android:paddingEnd="24dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_add"
                app:tint="@color/white"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Expense"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_bold"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>