<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_dashboard">

    <fragment
        android:id="@+id/nav_dashboard"
        android:name="com.example.personalcostdashboard.ui.Dashboard.DashboardFragment"
        android:label="Dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/nav_add_expense"
        android:name="com.example.personalcostdashboard.ui.addexpense.AddExpenseFragment"
        android:label="Add Expense"
        tools:layout="@layout/fragment_add_expense" />

    <fragment
        android:id="@+id/nav_history"
        android:name="com.example.personalcostdashboard.ui.History.HistoryFragment"
        android:label="History"
        tools:layout="@layout/fragment_history">
        <action
            android:id="@+id/action_nav_history_to_nav_add_expense"
            app:destination="@id/nav_add_expense" />
    </fragment>

    <fragment
        android:id="@+id/nav_analytics"
        android:name="com.example.personalcostdashboard.ui.analytics.AnalyticsFragment"
        android:label="Analytics"
        tools:layout="@layout/fragment_analytics" />

    <fragment
        android:id="@+id/nav_inflation"
        android:name="com.example.personalcostdashboard.ui.inflation.InflationFragment"
        android:label="Inflation"
        tools:layout="@layout/fragment_inflation" />

    <fragment
        android:id="@+id/nav_settings"
        android:name="com.example.personalcostdashboard.ui.Settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/nav_about"
        android:name="com.example.personalcostdashboard.ui.analytics.AnalyticsFragment"
        android:label="About"
        tools:layout="@layout/fragment_analytics" />




</navigation>
